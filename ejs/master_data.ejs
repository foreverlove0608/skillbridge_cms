<div class="c-modal create-company" id="add-skill">
	<div class="c-modal__wp">
		<form action="" method="post" class="c-modal__form">
			<h3 class="c-modal__ttl">Thêm mới Lĩnh vực/kỹ năng chuyên môn</h3>
			<div class="create-company__wp">
				<dl class="create-company__field create-company__field--full">
					<dt class="create-company__field-label"><span>*</span>Lĩnh vực/kỹ năng chuyên môn</dt>
					<dd class="create-company__field-input">
						<input type="text" class="form-control" placeholder="Nhập tên kênh">
					</dd>
				</dl>
				<dl class="create-company__field create-company__field--full">
					<dt class="create-company__field-label"><span>*</span>Place holder</dt>
					<dd class="create-company__field-input">
						<textarea name="" id="" cols="30" rows="10" class="form-control form-control--textarea" placeholder="Nhập place holder"></textarea>
					</dd>
				</dl>
			</div>
			<div class="c-modal__control">
				<button class="c-btn__01 c-btn__01--gray js-cancel">Hủy</button>
				<a href="#" class="c-btn__01">Thêm mới</a>
			</div>
		</form>
	</div>
</div>
